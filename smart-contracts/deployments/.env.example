# DIRS Smart Contracts Deployment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK MNEMONICS
# =============================================================================

# Testnet deployment mnemonic (25 words)
# Get testnet ALGO from: https://testnet.algoexplorer.io/dispenser
TESTNET_MNEMONIC="your twenty five word mnemonic phrase goes here for testnet deployment testing purposes only"

# Mainnet deployment mnemonic (25 words) - KEEP SECURE!
# This should be a well-funded account for production deployment
MAINNET_MNEMONIC="your twenty five word mnemonic phrase goes here for mainnet production deployment keep very secure"

# Localnet deployment mnemonic (25 words) - Optional
# For local development and testing
LOCALNET_MNEMONIC="your twenty five word mnemonic phrase goes here for local development and testing purposes only"

# =============================================================================
# CUSTOM NODE ENDPOINTS (Optional)
# =============================================================================

# Custom Algorand node endpoints (if not using default public nodes)
# TESTNET_ALGOD_TOKEN=""
# TESTNET_ALGOD_SERVER="https://testnet-api.algonode.cloud"
# TESTNET_ALGOD_PORT=443

# MAINNET_ALGOD_TOKEN=""
# MAINNET_ALGOD_SERVER="https://mainnet-api.algonode.cloud"
# MAINNET_ALGOD_PORT=443

# LOCALNET_ALGOD_TOKEN="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
# LOCALNET_ALGOD_SERVER="http://localhost"
# LOCALNET_ALGOD_PORT=4001

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Minimum ALGO balance required for deployment
# TESTNET_MIN_BALANCE=10000000   # 10 ALGO
# MAINNET_MIN_BALANCE=100000000  # 100 ALGO
# LOCALNET_MIN_BALANCE=1000000000 # 1000 ALGO

# Contract funding amounts (in microNEXDEN)
# STAKING_POOL_FUNDING=100000000    # 100 NEXDEN
# LP_FARMING_POOL_FUNDING=100000000 # 100 NEXDEN

# =============================================================================
# CUSTOM FEE STRUCTURE (Optional)
# =============================================================================

# Override default fees (in microNEXDEN)
# DID_REGISTRATION_FEE=1000000    # 1 NEXDEN
# DID_UPDATE_FEE=500000           # 0.5 NEXDEN
# REPUTATION_ATTESTATION_FEE=1500000 # 1.5 NEXDEN
# REPUTATION_DISPUTE_FEE=3000000  # 3 NEXDEN
# VC_REGISTRATION_FEE=2000000     # 2 NEXDEN
# VC_REVOCATION_FEE=1000000       # 1 NEXDEN

# =============================================================================
# STAKING CONFIGURATION (Optional)
# =============================================================================

# Override default staking parameters
# STAKING_REWARD_RATE=1200        # 12% APY (in basis points)
# STAKING_MIN_AMOUNT=1000000      # 1 NEXDEN minimum stake
# STAKING_UNBONDING_PERIOD=604800 # 7 days in seconds

# =============================================================================
# FARMING CONFIGURATION (Optional)
# =============================================================================

# Override default farming parameters
# FARMING_REWARD_RATE=100         # NEXDEN per second per LP token
# FARMING_PERIOD=7776000          # 90 days in seconds

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable additional security checks
# REQUIRE_DEPLOYMENT_CONFIRMATION=true
# ENABLE_TRANSACTION_SIMULATION=true
# BACKUP_DEPLOYMENT_DATA=true

# =============================================================================
# MONITORING AND ALERTS (Optional)
# =============================================================================

# Webhook URLs for deployment notifications
# SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."
# DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."

# Email notifications
# NOTIFICATION_EMAIL="admin@dirs.org"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable verbose logging
# DEBUG_MODE=true
# VERBOSE_LOGGING=true

# Skip certain deployment steps for testing
# SKIP_CONTRACT_FUNDING=false
# SKIP_VERIFICATION=false
# SKIP_CONFIGURATION=false

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real mnemonics to version control
# 2. Use strong, unique mnemonics for each network
# 3. Keep mainnet mnemonics extremely secure
# 4. Test thoroughly on testnet before mainnet deployment
# 5. Backup all deployment data and mnemonics securely
# 6. Monitor deployments and set up alerts
# 7. Have emergency procedures ready for mainnet